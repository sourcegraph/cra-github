{
  "name": "github-code-review-agent",
  "version": "2.0.0",
  "description": "GitHub app for automated code reviews with OAuth integration using Hono.js",
  "type": "module",
  "main": "dist/app.js",
  "scripts": {
    "predev": "node scripts/build.js",
    "dev": "tsx watch src/server.ts",
    "build": "node scripts/build.js",
    "start": "node dist/server.js",
    "test": "vitest",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "view-db": "node scripts/view-db.js"
  },
  "keywords": [
    "github",
    "hono",
    "code-review",
    "webhook",
    "oauth",
    "app",
    "typescript"
  ],
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@sourcegraph/the-orb-is-awake": "^0.1.0",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.2.0",
    "dotenv": "^16.4.7",
    "hono": "^4.6.10",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "minimatch": "^10.0.3",
    "node-fetch": "^3.3.2",
    "uuid": "^10.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.9.1",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "tsx": "^4.20.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
